@model PhotoFormModel

<ul class="container flex-wrap">
    @{
        int i = 0;
    }
    @foreach(Photo photo in Model.ListPhotos)
    {
        
            <li class="card">
                <a href="@Url.Action("Details", "Pizza", new{id=@photo.Id})"
                   style="text-decoration: none; color: black;">
                    <img src="@photo.Image">
                <img src="data:image;base64,@Model.ListImages[i]" alt="photo" />
                    <div class="card-body">
                        <h5 class="card-title">@photo.Title</h5>
                    </div>
                </a>
                <a href="@Url.Action("Update", "Pizza", new {Id = photo.Id})">Modifica</a>
                <form asp-controller="Pizza" asp-action="Delete" asp-route-id="@photo.Id" method="post">
                    <button type="submit">Elimina</button>
                </form>
 
            </li>
        i++;
    }
</ul>